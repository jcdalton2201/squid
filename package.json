{
  "name": "@populus/squid",
  "version": "0.0.4",
  "description": "Component Library for FED at Populus Fin",
  "main": "index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyzer": "custom-elements-manifest analyze --litelement --globs \"src/**/*.js\" --exclude \"src/**/*.stories.js\" \"src/utils/*.js\"",
    "bs": "browser-sync start -c ./bs-config.cjs",
    "build": "rollup -c",
    "build-storybook": "build-storybook",
    "cc": "node scripts/createComponent.js",
    "coverage": "nyc --reporter=lcov --reporter=text jasmine jasmine spec/**/*.js",
    "docs": "build-storybook -o ./docs",
    "lint": "eslint src --ignore-pattern *.stories.* --fix",
    "postcc": "npm run lint",
    "prebuild": "node scripts/buildfile.js && npm run lint && node scripts/readmeUpdate.js",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "prework": "npm run build",
    "release": "standard-version",
    "storybook": "start-storybook -p 6006",
    "test": "jasmine spec/**/*.js",
    "prewatchFiles": "npm run lint",
    "watchFiles": "rollup -c",
    "start": "npm-run-all -p bs watch",
    "watch": "watch \"npm run watchFiles\" src/"
  },
  "watch": {
    "start": "src/**/*.js"
  },
  "author": "Jason Dalton",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/puppeteer": "^4.3.2",
    "@babel/core": "^7.16.7",
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@storybook/addon-a11y": "^6.4.13",
    "@storybook/addon-actions": "^6.4.13",
    "@storybook/addon-essentials": "^6.4.13",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.4.13",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/html": "^6.4.13",
    "@storybook/theming": "^6.4.13",
    "@storybook/web-components": "^6.4.13",
    "babel-loader": "^8.2.3",
    "browser-sync": "^2.27.7",
    "chalk": "^5.0.0",
    "differencify": "^1.5.3",
    "eslint": "^8.7.0",
    "eslint-plugin-jasmine": "^4.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "globby": "^12.2.0",
    "jasmine": "^4.0.2",
    "jasmine-core": "^4.0.0",
    "line-column": "^1.0.2",
    "markdown-it": "^12.3.2",
    "minimist": "^1.2.5",
    "mkdirp": "^1.0.4",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "puppeteer": "^10.2.0",
    "puppeteer-to-istanbul": "^1.4.0",
    "react-is": "^17.0.2",
    "rollup": "^2.64.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-gzip": "^3.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sonarqube-scanner": "^2.8.1",
    "source-map": "^0.7.3",
    "standard-version": "^9.3.2",
    "watch": "^1.0.2"
  },
  "nyc": {
    "exclude": [
      "spec"
    ],
    "ignore": [
      "utils/standardize-key-code.js"
    ],
    "check-coverage": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "dependencies": {
    "highlight.js": "^11.4.0",
    "lit": "^2.1.1",
    "postcss": "^8.4.5"
  },
  "customElements": "custom-elements.json"
}
